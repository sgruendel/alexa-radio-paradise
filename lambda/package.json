{
  "name": "alexa-radio-paradise",
  "version": "2.7.0",
  "description": "Alexa Skill for querying playlist from Radio Paradise",
  "main": "index.js",
  "scripts": {
    "reinstall": "rm -rf ./node_modules && npm install",
    "test": "nyc --reporter=lcov --reporter=text mocha --timeout 7000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgruendel/alexa-radio-paradise.git"
  },
  "author": "Stefan Gr√ºndel",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/sgruendel/alexa-radio-paradise/issues"
  },
  "homepage": "https://github.com/sgruendel/alexa-radio-paradise#readme",
  "dependencies": {
    "ask-sdk-core": "2.12.1",
    "ask-sdk-model": "1.40.0",
    "i18next": "22.4.8",
    "i18next-sprintf-postprocessor": "0.2.2",
    "node-fetch": "^2.6.7",
    "winston": "3.8.2"
  },
  "devDependencies": {
    "alexa-skill-test-framework": "1.2.4",
    "chai": "4.3.7",
    "eslint": "8.31.0",
    "eslint-config-strongloop": "2.1.0",
    "mocha": "10.2.0",
    "nyc": "15.1.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "extends": "strongloop",
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "max-len": [
        "error",
        120,
        4,
        {
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
        }
      ]
    }
  }
}
