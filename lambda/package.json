{
    "name": "alexa-radio-paradise",
    "version": "2.9.1",
    "description": "Alexa Skill for querying playlist from Radio Paradise",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "reinstall": "rm -rf ./node_modules && npm install",
        "test": "c8 --reporter=lcov --reporter=text mocha --timeout 7000"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sgruendel/alexa-radio-paradise.git"
    },
    "author": "Stefan Gr√ºndel",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/sgruendel/alexa-radio-paradise/issues"
    },
    "homepage": "https://github.com/sgruendel/alexa-radio-paradise#readme",
    "dependencies": {
        "ask-sdk-core": "^2.14.0",
        "ask-sdk-model": "^1.86.0",
        "i18next": "^25.3.2",
        "i18next-sprintf-postprocessor": "^0.2.2",
        "node-fetch": "^3.3.2",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/chai": "^5.2.2",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.0.15",
        "alexa-skill-test-framework": "^1.2.4",
        "c8": "^10.1.3",
        "chai": "^5.2.1",
        "eslint": "^9.31.0",
        "eslint-config-strongloop": "^2.1.0",
        "mocha": "^11.7.1"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2023,
            "sourceType": "module"
        },
        "extends": "strongloop",
        "env": {
            "es6": true,
            "node": true,
            "mocha": true
        },
        "rules": {
            "indent": [
                "error",
                4,
                {
                    "SwitchCase": 1
                }
            ],
            "max-len": [
                "error",
                120,
                4,
                {
                    "ignoreComments": true,
                    "ignoreUrls": true,
                    "ignoreStrings": true,
                    "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
                }
            ],
            "space-before-function-paren": 0
        }
    }
}
