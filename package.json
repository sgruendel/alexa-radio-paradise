{
  "name": "radio-paradise",
  "version": "1.2.1",
  "description": "Alexa Skill for querying playlist from Radio Paradise",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgruendel/alexa-radio-paradise.git"
  },
  "main": "index.js",
  "scripts": {
    "invoke": "aws lambda invoke --function-name radioParadise --payload fileb://test/events/alexa-start-session.json test/out.txt && cat test/out.txt",
    "test": "nyc --reporter=lcov --reporter=text mocha --timeout 5000",
    "deploy": "npm run zip && npm run upload",
    "upload": "aws lambda update-function-code --function-name radioParadise --zip-file fileb://index.zip",
    "zip": "npm prune --production && zip -r index.zip node_modules && cd src && zip ../index.zip *"
  },
  "author": "Stefan Gr√ºndel",
  "license": "GPL-3.0",
  "dependencies": {
    "alexa-sdk": "^1.0.25",
    "cheerio": "^1.0.0-rc.2",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^5.3.0",
    "eslint-config-strongloop": "^2.1.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2"
  },
  "eslintConfig": {
    "extends": "strongloop",
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "max-len": [
        "error",
        120,
        4,
        {
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
        }
      ]
    }
  }
}
